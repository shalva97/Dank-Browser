<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DankComponent"/>
    <style name="DankComponent.Text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DankComponent.Tab">
        <item name="android:layout_marginStart">@dimen/task_item_margins</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/border_tab_shape</item>
        <item name="android:layout_marginEnd">11dp</item>
        <item name="android:layout_height">42dp</item>
    </style>

    <style name="DankComponent.Text.TaskName">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Dialog">
        <!-- No backgrounds, titles or window float -->
        <item name="android:layout_gravity">bottom</item>
    </style>
</resources>